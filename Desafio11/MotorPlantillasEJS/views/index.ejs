<%- include('./partials/encabezado')-%>

    <body>
        
        <div class="container mt-3">
            <div class="jumbotron">
                <h1 class="text-center">Vista de Productos</h1>
                <br>
            
                <% if (hayProductos) {%>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <tr style="color: yellow;">
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Imagen</th>
                            </tr>
                <%productos.forEach(function(producto) {%>
                    
                    <tr>
                        <td>
                            <%=producto.title%>
                        </td>
                        <td>
                            <%=producto.price%>
                            
                        </td>
                        <td>
                            <img width="100" alt="not found" src=<%=producto.thumbnail%>>
                        </td>
                       
                    </tr>
                    <%});%>
                    <%} else{%>
                        <h3 class="alert alert-danger">no se encontraron productos</h1>
                <%}%>
            </table>
        
        
        </div>
            </div>
        </div>
    </body>

    </html>
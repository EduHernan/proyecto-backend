extends encabezado 

block partial 
    body
        <div class="container mt-3">
            <div class="jumbotron">
                h1(class="text-center")="Vista de Productos"
                <br>
            
                if hayProductos
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <tr style="color: yellow;">
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Imagen</th>
                            </tr>
                    each producto in productos
                    
                        tr
                            td=producto.title
                            
                            td=producto.price
                            
                            td
                                img(width="100" src=producto.thumbnail alt="not found")
                            
                    
                else
                    h3(class="alert alert-danger")="no se encontraron datos"
                    
                
            
        
        
       
    
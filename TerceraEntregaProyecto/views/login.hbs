<link rel="stylesheet" href="css/estilos.css">

<div class="container my-5">
        <div class="jumbotron">
            <h1>Login de Usuario</h1>
            <br>
            <form class="form" action="/api/login" method="post" role="form" autocomplete="off">

             <div class="form-group">
              <input id="username" name="username" placeholder="nombre" class="form-control" type="text" required>
            </div>

            <div class="form-group">
                <input id="password" name="password" placeholder="password" class="form-control" type="password" required>
            </div>

            <div class="form-group">
                <input class="btn btn-success my-3" type="submit" value="Login">
            </div>
            </form>

            <hr>
            <div class="text-left">
            <button class="btn btn-success my-3" onclick="location.href = '/api/register'">Ir a Registro</button>
            </div>
        </div>
    </div>
  </div>